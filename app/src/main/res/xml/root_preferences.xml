<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ad_skipper_header">

        <SwitchPreferenceCompat
            app:key="enable-service"
            app:summaryOff="@string/ad_skipper_enabled_off"
            app:summaryOn="@string/ad_skipper_enabled_on"
            app:title="@string/ad_skipper_enabled_title" />

        <SwitchPreferenceCompat
            app:dependency="enable-service"
            app:key="mute-audio"
            app:summaryOff="@string/mute_ad_enabled_off"
            app:summaryOn="@string/mute_ad_enabled_on"
            app:title="@string/mute_ad_enabled_title" />

    </PreferenceCategory>

</PreferenceScreen>