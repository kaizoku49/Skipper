<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/youtube_ad_skipper_header">

        <SwitchPreferenceCompat
            app:key="enable-service"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/ad_skipper_enabled_title" />

        <SwitchPreferenceCompat
            app:dependency="enable-service"
            app:key="mute-audio"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/mute_ad_enabled_title" />

    </PreferenceCategory>

</PreferenceScreen>